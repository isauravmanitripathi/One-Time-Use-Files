    {
      "id": "/page/0/Equation/12",
      "block_type": "Equation",
      "html": "<p block-type=\"Equation\"><math display=\"block\">\\text{EER} = \\gamma (\\text{PFL})^{\\alpha} (\\text{CEL})^{\\beta} \\tag{1}</math></p>",
      "page": 225,
      "polygon": [
        [
          357.5703125,
          345.52197265625
        ],
        [
          511.9296875,
          345.52197265625
        ],
        [
          511.9296875,
          356.19873046875
        ],
        [
          357.5703125,
          356.19873046875
        ]
