      },
      "images": {}
    },
    {
      "id": "/page/0/SectionHeader/16",
      "block_type": "SectionHeader",
      "html": "<h4><b>3. Independent access to financial rates</b></h4>",
      "page": 304,
      "polygon": [
        [
          302.9375,
          270.6005859375
        ],
        [
          468.5419616699219,
          270.6005859375
        ],
        [
          468.5419616699219,
          280.6353759765625
        ],
        [
          302.9375,
          280.6353759765625
        ]
