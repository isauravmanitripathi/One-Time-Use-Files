    {
      "id": "/page/0/SectionHeader/18",
      "block_type": "SectionHeader",
      "html": "<h4><b>4. Benchmark modeling</b></h4>",
      "page": 304,
      "polygon": [
        [
          302.9375,
          342.4420166015625
        ],
        [
          404.6875,
          342.4420166015625
        ],
        [
          404.6875,
          352.3330078125
        ],
        [
          302.9375,
          352.3330078125
        ]
      ],
      "bbox": [
        302.9375,
        342.4420166015625,
        404.6875,
        352.3330078125
      ],
      "section_hierarchy": {
