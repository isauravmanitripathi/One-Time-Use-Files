    {
      "id": "/page/0/SectionHeader/14",
      "block_type": "SectionHeader",
      "html": "<h4><b>2. Soundness of model</b></h4>",
      "page": 304,
      "polygon": [
        [
          303.1221923828125,
          117.352294921875
        ],
        [
          398.6171875,
          117.352294921875
        ],
        [
          398.6171875,
          127.6966552734375
        ],
        [
          303.1221923828125,
          127.6966552734375
        ]
      ],
      "bbox": [
        303.1221923828125,
        117.352294921875,
        398.6171875,
        127.6966552734375
      ],
      "section_hierarchy": {
