    {
      "id": "/page/0/SectionHeader/4",
      "block_type": "SectionHeader",
      "html": "<h4><b>1. Documentation</b></h4>",
      "page": 304,
      "polygon": [
        [
          75.30078125,
          406.453125
        ],
        [
          150.1806640625,
          406.453125
        ],
        [
          150.1806640625,
          416.3002624511719
        ],
        [
          75.30078125,
          416.3002624511719
        ]
      ],
      "bbox": [
        75.30078125,
        406.453125,
        150.1806640625,
        416.3002624511719
      ],
      "section_hierarchy": {
