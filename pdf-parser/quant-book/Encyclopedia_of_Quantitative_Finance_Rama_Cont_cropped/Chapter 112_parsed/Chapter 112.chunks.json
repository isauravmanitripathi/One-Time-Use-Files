    {
      "id": "/page/0/Equation/5",
      "block_type": "Equation",
      "html": "<p block-type=\"Equation\"><math display=\"block\">B = \\sum_{i=1}^{n} w_i S_i \\tag{1}</math></p>",
      "page": 187,
      "polygon": [
        [
          153.203125,
          479.7177734375
        ],
        [
          286.171875,
          479.7177734375
        ],
        [
          286.171875,
          507.6982421875
        ],
        [
          153.203125,
          507.6982421875
        ]
      ],
      "bbox": [
        153.203125,
        479.7177734375,
        286.171875,
        507.6982421875
      ],
