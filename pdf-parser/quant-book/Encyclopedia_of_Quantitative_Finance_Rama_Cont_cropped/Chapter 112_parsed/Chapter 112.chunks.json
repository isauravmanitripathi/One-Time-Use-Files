      "section_hierarchy": {
        "2": "/page/0/SectionHeader/0"
      },
      "images": {}
    },
    {
      "id": "/page/0/Text/8",
      "block_type": "Text",
      "html": "<p block-type=\"Text\" class=\"has-continuation\">Here, <math display=\"inline\">p_i</math> represents the instantaneous capitalization weight of the <math display=\"inline\">i</math>th stock in the basket, that is, the percentage of the total dollar amount of the</p>",
      "page": 187,
      "polygon": [
        [
          74.9367088607595,
          612.3439363817098
        ],
        [
          286.2582278481013,
          612.3439363817098
        ],
        [
          286.2582278481013,
          644.287109375
        ],
        [
          74.9367088607595,
          644.287109375
        ]
