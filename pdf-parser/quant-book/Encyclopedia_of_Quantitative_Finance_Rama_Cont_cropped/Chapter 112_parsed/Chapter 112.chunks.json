    {
      "id": "/page/0/Equation/10",
      "block_type": "Equation",
      "html": "<p block-type=\"Equation\"><math display=\"block\">\\sigma_B^2 = \\sum_{ij=1}^n p_i p_j \\sigma_i \\sigma_j \\rho_{ij} \\tag{3}</math></p>",
      "page": 187,
      "polygon": [
        [
          363.3515625,
          128.581298828125
        ],
        [
          511.9296875,
          128.581298828125
        ],
        [
          511.9296875,
          159.507080078125
        ],
        [
          363.3515625,
          159.507080078125
        ]
      ],
      "bbox": [
        363.3515625,
        128.581298828125,
        511.9296875,
        159.507080078125
