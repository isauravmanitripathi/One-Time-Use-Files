      "images": {}
    },
    {
      "id": "/page/0/Equation/5",
      "block_type": "Equation",
      "html": "<p block-type=\"Equation\"><math display=\"block\">\\sigma_{\\mathsf{R}}^{2} = \\frac{252}{n} \\sum_{i=1}^{n} u_{i}^{2}, \\quad u_{i} = \\ln \\left( S_{i} \\big/ S_{i-1} \\right) \\tag{2}</math></p>",
      "page": 489,
      "polygon": [
        [
          89.8984375,
          289.4154968261719
        ],
        [
          285.1430358886719,
          289.4154968261719
        ],
        [
          285.1430358886719,
          320.302734375
