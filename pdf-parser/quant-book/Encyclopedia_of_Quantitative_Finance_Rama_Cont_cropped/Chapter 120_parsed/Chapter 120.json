          "id": "/page/0/SectionHeader/0",
          "block_type": "SectionHeader",
          "html": "<h2>Volatility Swaps</h2>",
          "polygon": [
            [
              74.9367088607595,
              71.423828125
            ],
            [
              203.82784810126583,
              71.423828125
            ],
            [
              203.82784810126583,
              88.635498046875
            ],
            [
              74.9367088607595,
              88.635498046875
